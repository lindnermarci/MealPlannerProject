@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.FirstName">Your First Name:</label>
                <input type="text" asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label asp-for="Input.LastName">Your Last Name:</label>
                <input type="text" asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label asp-for="Input.Age">Your Age:</label>
                <input type="text" asp-for="Input.Age" class="form-control" />
                <span asp-validation-for="Input.Age" class="text-danger"></span>

            </div>


            <div class="form-group">
                <label>Your Weight:</label>
                <input type="text" asp-for="Input.Weight" class="form-control" />
                <span asp-validation-for="Input.Weight" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label>Your Gender:</label>
                <select asp-for="Input.Gender">
                    <option value="MALE">Male</option>
                    <option value="FEMALE">Female</option>
                </select>
                <span asp-validation-for="Input.Gender" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label>Your Height(cm):</label>
                <input type="text" asp-for="Input.Height" class="form-control" />
                <span asp-validation-for="Input.Height" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label>Your numMealsADay:</label>
                <select asp-for="Input.NumOfMealsPerDay">
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                </select>
            </div>

            <div class="form-group">
                <label>Your daily sleep(hour):</label>
                <input type="text" asp-for="Input.SleepDaily" class="form-control" />
                <span asp-validation-for="Input.SleepDaily" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label>Your Weekly cardio:</label>
                <select asp-for="Input.ActivityFactor">
                    <option value="1.200">Desk job with little exercise</option>
                    <option value="1.375">1-3 hrs/wk of strenuous cardio</option>
                    <option value="1.550">3-5 hrs/wk of strenuous cardio</option>
                    <option value="1.725">5-6 hrs/wk of strenuous cardio</option>
                    <option value="1.900">7-21 hrs/wk of strenuous cardio</option>
                </select>
            </div>

            <div class="form-group">

                <label>Your bodyfat percentage:(<a href="https://www.calculator.net/body-fat-calculator.html">Help</a>)</label>
                <input type="text" asp-for="Input.BodyFatPercentage" class="form-control" />
                <span asp-validation-for="Input.BodyFatPercentage" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label>Your predicted yearly muscle gain(kg):</label>
                <select asp-for="Input.PredictedYearlyMuscleGain">
                    <option value="0">00 kg/yr - no gains</option>
                    <option value="7000">7 kg/yr - newbie teen average</option>
                    <option value="18000">18 kg/yr - newbie teen max</option>
                    <option value="4500">4,5 kg/yr - newbie adult average</option>
                    <option value="9000">9 kg/yr - newbie adult max">20 kg/yr - newbie adult max</option>
                    <option value="2500">2,5 kg/yr - experienced adult average</option>
                    <option value="4500">4,5 kg/yr - experienced adult max</option>
                    <option value="28000">28 kg/yr - non-natty lifter</option>
                </select>
            </div>

            <div class="form-group">
                <label>Your Nutrition preference:</label>
                <select asp-for="Input.NutritionType">
                    <option value="FAT">Medium fat, medium carbs</option>
                    <option value="CARB">Low fat, high carbs</option>
                </select>

                <div class="form-group">
                    <label>Your Goal:</label>
                    <select asp-for="Input.CalorieSurplus">
                        <option value="1.15">Bulk - 15% calorie surplus</option>
                        <option value="1.10">Bulk - 10% calorie surplus</option>
                        <option value="1.05">Bulk - 5% calorie surplus</option>
                        <option value="1">Gain muscle, loose fat</option>
                        <option value="0.95">Loose fat - 5% calorie reduction</option>
                        <option value="0.90">Loose fat - 10% calorie reduction</option>
                        <option value="0.85">Loose fat - 15% calorie reduction</option>
                        <option value="0.80">Loose fat - 20% calorie reduction</option>
                        <option value="0.75">Loose fat - 25% calorie reduction</option>
                    </select>

                </div>

            </div>


            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h4>Use another service to register.</h4>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                            for details on setting up this ASP.NET application to support logging in via external services.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
